#!/bin/sh

SEP="=>"

## Main script ##
echo "	Host $SEP $(cat /etc/hostname)
	User $SEP $USER
 __(.)> Shell $SEP $SHELL
 \__)	WM $SEP $(echo $GDMSESSION)
	Packages $SEP $(pacman -Qq | wc -l)
	Uptime $SEP $(uptime -p | cut -c 4- | sed 's/ //g' | sed 's/,//g' | sed 's/hours/h/g' | sed 's/minutes/m/g')"
